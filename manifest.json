{
    "manifest_version": 3,
    "name": "Recipe Extractor",
    "version": "1.2",
    "description": "View and extract recipes from any website with no ads, popups, or extra text.",
    "icons": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "action": {
      "default_popup": "popup.html"
    },
    "permissions": [
      "storage"
    ],
    "content_scripts": [
      {
        "matches": ["http://*/*", "https://*/*"],
        "js": ["content.js"],
        "css": ["styles.css"]
      }
    ]
  }
  